<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FirstPage">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="321dp"
        android:layout_height="332dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/background_taxi_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"></ImageView>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="256dp"
        android:layout_height="61dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:letterSpacing="0.06"
        android:text="Taxi App"
        android:textColor="@color/contentTextColor"
        android:textFontWeight="900"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="4dp"

        android:letterSpacing="0.01"
        android:text="Explore new ways to  \ntravel with us"
        android:textColor="#ffc300"

        android:textFontWeight="400"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="41dp"
        android:padding="15dp"
        android:text="By continiuing,you agree that you have read and accept our T&amp;Cs privacy Policy"
        android:textColor="#ffc300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegi" />



    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnRegi"
        style="@style/loginButton"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="12dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSignin"
        app:layout_constraintHorizontal_bias="0.021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:id="@+id/btnSignin"
        style="@style/loginButton"
        android:layout_width="148dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="34dp"

        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/btnRegi"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRegi"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>